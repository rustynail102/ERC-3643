{
  "extends": "solhint:recommended",
  "rules": {
    "func-order": "off",
    "mark-callable-contracts": "off",
    "max-states-count": "off",
    "compiler-version": ["error", "^0.6.0"],
    "no-unused-vars": ["off"],
    "no-empty-blocks": ["off"],
    "var-name-mixedcase": ["off"],
    "quotes": ["error","single"],
    "avoid-low-level-calls": ["off"],
    "no-complex-fallback": ["off"],
    "no-inline-assembly": ["off"]
  }
}
